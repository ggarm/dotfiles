"2.2 (created: 2009/10/28 19:04:27)

map <C-f> /
map <C-b> <C-v><C-b> 

"colorscheme desert_revisited
"colorscheme griff
"colorscheme bigchu-mini
colorscheme bigchu

au LocationChange .* js modes.passAllKeys = /google\.com\/(reader|calendar|mail|a)/.test(buffer.URL);

"loadplugins
source ~/.vimperator/styles/styles.js

set runtimepath=$HOME/.vimperator
source! $HOME/.vimperatorrc.local

set shell='/bin/zsh'
set editor='urxvt -e vim'
set showtabline=1
set showstatuslinks=2
set ic
"set popups=2
set wildoptions=auto
set complete=bl
set focuscontent

"map lazyness
noremap h 4h
noremap j 4j
noremap k 4k
noremap l 4l

javascript <<EOM
mappings.addUserMap([modes.NORMAL, modes.PLAYER, modes.VISUAL, modes.CARET,
		modes.INSERT, modes.TEXTAREA],
		["<F2>"],
		"toggle default/custom colours",
		function() {
		udc = options.getPref("browser.display.use_document_colors")
		bg  = options.getPref("browser.display.background_color")
		fg  = options.getPref("browser.display.foreground_color")
		if ( udc == true ) {
		udc = false
		bg  = '#1c1c1c'
		fg  = '#d7d7d7'
		alert("Switching to custom colours")
		}
		else {
		udc = true
		bg  = '#ffffff'
		fg  = '#000000'
		alert("Switching to default colours")
		}
		options.setPref("browser.display.use_document_colors", udc)
			options.setPref("browser.display.background_color", bg)
			options.setPref("browser.display.foreground_color", fg)
		});
EOM

" vim: set ft=vimperator:
