#!/bin/sh
STATIC=main
LINK=mubjbngn.default
VOLATILE=/dev/shm/$USER/firefox

cd ~/.mozilla/firefox

[[ -r $VOLATILE ]] || install -dm700 $VOLATILE

if [[ `readlink $LINK` != $VOLATILE ]]; then
	mv $LINK $STATIC
	ln -s $VOLATILE $LINK
fi

if [[ -e $LINK/.unpacked ]]; then
	rsync -q -av --delete --exclude .unpacked ./$LINK/ ./$STATIC/
else
	rsync -q -av ./$STATIC/ ./$LINK/
	touch $LINK/.unpacked
fi
