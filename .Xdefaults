! Xcursor ---------------------------------------------------------------------- {{{
!
!Xcursor*theme: Vanilla-DMZ-AA
!Xcursor.theme: neutral
!Xcursor.size:  22
!Xcursor.theme: whiteglass
!Xcursor.size:  16
!Xcursor.theme: Ecliz-Arch
!Xcursor.size:  16
Xcursor.theme: oxy-neon
!Xcursor.size:  16
! }}}

! Font Management -------------------------------------------------------- {{{
Xft.dpi:       96
!Xft.dpi:       100
Xft.antialias: 1
Xft.rgba:      rgb
Xft.lcdfilter: lcddefault
Xft.hinting:   1
Xft.hintstyle: hintslight
!Xft.hintstyle: hintfull
! }}}

! Xterm ---------------------------------------------------------------------- {{{
xterm*background:       black
xterm*foreground:       green
xterm*cursorColor:	orange
xterm*eightBitInput:    true
xterm*saveLines:        32767
xterm*scrollTtyKeypress:       false
xterm*scrollTtyOutput:  true
!xterm*font:		*-fixed-medium-*-normal-*-14-*
xterm*scrollBar:        false
xterm*loginShell:       false
xterm*jumpScroll:       true
xterm*multiScroll:      false
xterm*toolBar:          false
xterm*geometry:         80x25
! }}}

! urxvt ---------------------------------------------------------------------- {{{
URxvt*termName: rxvt-256color
URxvt*buffered: true
!URxvt*background: black
!URxvt*foreground: white
!URxvt*cursorColor: orange
URxvt*cursorBlink: true
!URxvt*underlineColor: orange
!
URxvt*urgentOnBell: true

! clickable URLS
URxvt*perl-ext: default,matcher
URxvt*urlLauncher: /usr/bin/chromium
URxvt*matcher.button: 1

! borderless and no scrollbar
URxvt*scrollBar_right: false
URxvt*scrollBar: false
URxvt*borderLess: false

! Transparency stuff
!URxvt*inheritPixmap: true
!URxvt*tintColor: white
!URxvt*shading: 1

! fade text n% upon unfocus
!urxvt*fading:             20

URxvt*trippleclickwords: true
URxvt*pasteableTabs: true
URxvt*pointerBlank: true
URxvt*pointerBlankDelay: 2
!URxvt*depth: 24
URxvt*depth:   32

! Icon for urxvt
!URxvt*iconFile: /usr/share/pixmaps/rxvt-unicode.png
URxvt*iconFile: /usr/share/pixmaps/terminal.png

! geometry and font
URxvt*geometry: 130x32
!
! Monaco
!
!URxvt*font: xft:Monaco:pixelsize=11:antialias=false
!URxvt*boldFont : xft:Monaco: pixelsize=11:weight=bold
!
URxvt*font:         xft:monaco:size=10
URxvt*bolfFont:     xft:monaco:size=10:weight=bold
URxvt*italicFont:   xft:monaco:size=10
!URxvt*italicFont:   xft:monaco:size=9:weight=italic:antialias=true
!
!
! Droid Sans Mono Slashed
!
!URxvt*font:        xft:Droid Sans Mono Slashed:style=Regular:pixelsize=12:antialias=true:hinting=true:hintstyle=hintfull
!URxvt*boldFont:    xft:Droid Sans Mono Slashed:style=Regular:pixelsize=12:antialias=true:hinting=true:hintstyle=hintfull
!URxvt*italicFont: -nil-profont-medium-r-normal--10-100-72-72-c-50-iso8859-1
!
! Terminus
! 
!URxvt*font: xft:terminus:pixelsize=14:antialias=false
!URxvt*boldFont: xft:terminus:bold:pixelsize=14:antialias=false
!URxvt*italicFont: xft:terminus:bold:pixelsize=14:antialias=false

! }}}

! XLock ---------------------------------------------------------------------- {{{
!!
!! X L O C K
!!
!!
!XLock.mode: fzort
!XLock.mode: atunnels
XLock.username: User:
XLock.password: Pass:
XLock.timeout: 5
XLock.foreground: White
XLock.background: Gray20
XLock.description: false
XLock.echokeys: true
XLock.echokey: *
XLock.info:
!XLock.info: Enter password to unlock \nSelect icon to lock
XLock.validate: Validating login...
XLock.invalid: Login failed, please go away
XLock.font: -xos4-terminus-*-*-*-*-*-*-*-*-*-*-*-*
XLock.planfont: -xos4-terminus-*-*-*-*-*-*-*-*-*-*-*-*
XLock.messagefont: -xos4-terminus-*-*-*-*-*-*-*-*-*-*-*-*
XLock.ncolors: 256
!}}}

